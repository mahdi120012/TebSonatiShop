<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="52sp"
    android:background="#ffffff"
    android:layoutDirection="ltr"
    android:textDirection="rtl"
    >

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e4e4"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <EditText
        android:id="@+id/etComment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/rmedium"
        android:foregroundGravity="right"
        android:gravity="center|right"
        android:hint="کامنت با ..."
        android:inputType="textPersonName"
        android:textColor="#A2A2A2"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgUserInComment"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txSendComment"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txSendComment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:enabled="false"
        android:textStyle="bold"
        android:fontFamily="@font/rmedium"
        android:gravity="center_vertical"
        android:text="ارسال"
        android:textSize="14sp"
        android:textColor="#b1c6e5"
        android:paddingRight="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24000001"
        android:paddingEnd="9dp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUserInComment"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/usericon"
        app:civ_border_color="#bec0bd"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
