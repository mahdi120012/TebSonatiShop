<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:openDrawer="end"
    android:layoutDirection="ltr"
    android:textDirection="rtl"
    >



    <include
        layout="@layout/login"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.google.android.material.navigation.NavigationView
        android:background="#eeeff0"
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navigation_header"
        android:layoutDirection="rtl"
        android:textDirection="rtl">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:clickable="true">

            <TextView
                android:id="@+id/txMenuSoalatMotadavel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="103dp"
                android:layout_marginEnd="118dp"
                android:layout_marginRight="118dp"
                android:fontFamily="@font/adobearabicbold"
                android:gravity="center"
                android:text="سوالات متداول"
                android:textColor="#1c1c1c"
                android:textSize="25sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/imageView51"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="164dp"
                android:layout_marginEnd="228dp"
                android:layout_marginRight="228dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/exit" />

            <TextView
                android:id="@+id/txExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="158dp"
                android:layout_marginEnd="60dp"
                android:layout_marginRight="60dp"
                android:fontFamily="@font/adobearabicbold"
                android:gravity="center"
                android:text="خروج از حساب کاربری"
                android:textColor="#CA1A1A"
                android:textSize="25sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/txMenuManabe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="103dp"
                android:layout_marginEnd="185dp"
                android:layout_marginRight="185dp"
                android:fontFamily="@font/adobearabicbold"
                android:gravity="center"
                android:text="منابع"
                android:textColor="#1c1c1c"
                android:textSize="25sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/txMenuAboutme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="103dp"
                android:layout_marginEnd="160dp"
                android:layout_marginRight="160dp"
                android:fontFamily="@font/adobearabicbold"
                android:gravity="center"
                android:text="درباره ما"
                android:textColor="#1c1c1c"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="108dp"
                android:layout_marginEnd="228dp"
                android:layout_marginRight="228dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/darbarema_manu_blue_grey_500_18dp" />

            <TextView
                android:id="@+id/nav_footer_txVesionCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="104dp"
                android:layout_marginLeft="104dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/adobearabicbold"
                android:gravity="center"
                android:text="نسخه 1.0"
                android:textColor="#45a245"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />




        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.navigation.NavigationView>




</androidx.drawerlayout.widget.DrawerLayout>
